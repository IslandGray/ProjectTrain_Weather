<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wcp.weathertest.AddTravel">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="559dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_edit"
        android:layout_marginTop="56dp"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:tag="lala">

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:background="@color/darkwhite" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="标题"
                android:inputType="textPersonName"
                android:textSize="18dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:background="@color/darkwhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="全天"
                    android:textSize="18dp" />

                <Switch
                    android:id="@+id/edit_allday_switch"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.09" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:srcCompat="@color/divider" />

            <LinearLayout
                android:id="@+id/edit_begintime_linear"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="开始"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/edit_begintime_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:text="选择起始时间 >"
                    android:textSize="18dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:srcCompat="@color/divider" />

            <LinearLayout
                android:id="@+id/edit_endtime_linear"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="结束"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/edit_endtime_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:text="选择结束时间 >"
                    android:textSize="18dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:srcCompat="@color/divider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:background="@color/darkwhite" />

            <LinearLayout
                android:id="@+id/edit_remind_line"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="提醒"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/edit_remind_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:text="无 >"
                    android:textSize="18dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:srcCompat="@color/divider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:background="@color/darkwhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="邀请人"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/edit_inviter_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:text="无 >"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:srcCompat="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="fill_vertical"
                    android:text="日历"
                    android:textSize="18dp" />

                <FrameLayout
                    android:layout_width="295dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/edit_calendar_belong"
                        android:layout_width="273dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center_vertical|end" />

                    <ImageView
                        android:id="@+id/edit_calendar_color"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical|end" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text=" >"
                    android:textSize="18dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:srcCompat="@color/divider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/colorAccent"
                android:text="删除此日程" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>

