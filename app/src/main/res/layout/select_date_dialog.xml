<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:id="@+id/select_date_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="61dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="end"
            android:text="确定"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/select_date_cancel" />

        <TextView
            android:id="@+id/select_date_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="end"
            android:text="取消"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20dp"
            android:layout_alignBaseline="@+id/select_date_enter"
            android:layout_alignBottom="@+id/select_date_enter"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
